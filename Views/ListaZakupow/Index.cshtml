@model IEnumerable<ListaZakupowMVC.Models.ListaZakupow>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsSet)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @if(item.IsSet == true)
            {
                <td>
                    <s>@Html.DisplayFor(modelItem => item.Description)</s>
                </td>

             }
             else
             {
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
             }
             <td>
                    @Html.DisplayFor(modelItem => item.IsSet)
             </td>
          
            <td>
                @if(!item.IsSet){
                    <form asp-controller="ListaZakupow" asp-action="Check" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <input type="submit" value="Zrobione" class="btn btn-danger" />
                    </form>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                }
             

                    <!-- <a asp-action="Edit" asp-route-id="item.Id">Edit</a> |         |
               
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>

                                   -->


            </td>
        </tr>
}
    </tbody>
</table>
